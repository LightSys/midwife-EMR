extends layouts/default_layout

block reportsForm
  +titleMsg(title)

  - var reportPath = '/report/run';
  - var reportPathPdf = '/report/runPdf';

  form(id='reportsForm', class='disable-on-submit', role='form', name='reportsForm', action=reportPath, method='post')
    input(type='hidden', name='_csrf', value=token)
    div.row
      div(class='col-md-6')
        label= gettext('Report from:')
        +datePicker('form-control input-lg', 1, 'dateFrom', null, null, '-1m')
      div(class='col-md-6')
        label= gettext('Report to:')
        +datePicker('form-control input-lg', 2, 'dateTo', null, null, '-1d')
    div.row
      div(class='col-md-6')
        label= gettext('Select the report:')
        +select('form-control input-lg', 'report', 3, reportType)
      div(class='col-md-6')
        label= gettext('Select the in-charge:')
        +select('form-control input-lg', 'inCharge', 4, inCharge)
    div.row
      div(class='col-md-12')
        span &nbsp;
    div.row
      div(class='col-md-6')
        input(class='btn btn-primary', type='submit', value=gettext('View Report'))
      div(class='col-md-6')
        input(id='reportFormDownloadPdf', class='btn btn-primary', type='submit', formaction=reportPathPdf, formtarget='_blank', value=gettext('Download PDF'))
