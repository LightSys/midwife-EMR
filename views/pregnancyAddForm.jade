extends layouts/default_layout

block pregnancyAdd
  +titleMsg(title)

  div.formBoxLarge
    form(role='form', name='pregnancyForm', action='/pregnancy', method='post')
      div.row
        div(class='form-group col-sm-4')
          span= gettext('Last name')
          input(class='form-control input-lg', type='text', tabindex="1", autocomplete="off", name='lastname', autofocus)
        div(class='form-group col-sm-4')
          span= gettext('First name')
          input(class='form-control input-lg', type='text', tabindex="2", autocomplete="off", name='firstname')
        div(class='form-group col-sm-4')
          span= gettext('Date of Birth')
          input(class='form-control input-lg', type='date', tabindex="3", autocomplete="off", name='dob')
      div.row
        div(class='form-group col-sm-4')
          span= gettext('Religion')
          //-input(class='form-control input-lg', type='text', tabindex="4", autocomplete="off", name='religion', list="religion")
          +select('form-control input-lg', 'religion', 4, religion)
        div(class='form-group col-sm-4')
          span= gettext('Maiden name')
          input(class='form-control input-lg', type='text', tabindex="5", autocomplete="off", name='maidenname')
        div(class='form-group col-sm-4')
          span= gettext('Nick name')
          input(class='form-control input-lg', type='text', tabindex="6", autocomplete="off", name='nickname')
      div.row
        div(class='form-group col-sm-4')
          span= gettext('Marital status')
          +select('form-control input-lg', 'maritalStatus', 7, marital)
        div(class='form-group col-sm-4')
          span= gettext('Address')
          input(class='form-control input-lg', type='text', tabindex="8", autocomplete="off", name='address')
        div(class='form-group col-sm-4')
          span= gettext('Barangay')
          input(class='form-control input-lg', type='text', tabindex="9", autocomplete="off", name='barangay')
      div.row
        div(class='form-group col-sm-4')
          span= gettext('Work')
          input(class='form-control input-lg', type='text', tabindex="10", autocomplete="off", name='work')
        div(class='form-group col-sm-4')
          span= gettext('Education')
          +select('form-control input-lg', 'education', 11, education)
        div(class='form-group col-sm-4')
          span= gettext('Telephone')
          input(class='form-control input-lg', type='tel', tabindex="12", autocomplete="off", name='telephone')
      div.row
        div(class='form-group col-sm-4')
          span= gettext('Partner last name')
          input(class='form-control input-lg', type='text', tabindex="13", autocomplete="off", name='partnerLastname')
        div(class='form-group col-sm-4')
          span= gettext('Partner first name')
          input(class='form-control input-lg', type='text', tabindex="14", autocomplete="off", name='partnerFirstname')
        div(class='form-group col-sm-4')
          span= gettext('Partner age')
          input(class='form-control input-lg', type='number', tabindex="15", autocomplete="off", name='partnerAge')
      div.row
        div(class='form-group col-sm-4')
          span= gettext('Partner work')
          input(class='form-control input-lg', type='text', tabindex="16", autocomplete="off", name='partnerWork')
        div(class='form-group col-sm-4')
          span= gettext('Partner education')
          +select('form-control input-lg', 'partnerEducation', 17, education)
        div(class='form-group col-sm-2')
          span= gettext('Client monthly Income')
          input(class='form-control input-lg', type='number', tabindex="18", autocomplete="off", name='monthlyIncome')
        div(class='form-group col-sm-2')
          span= gettext('Partner monthly income')
          input(class='form-control input-lg', type='number', tabindex="19", autocomplete="off", name='partnerMonthlyIncome')
      div.row
        div(class='form-group col-sm-4')
          span= gettext('DOH #')
          input(class='form-control input-lg', type='number', tabindex="20", autocomplete="off", name='doh')
        div(class='form-group col-sm-4')
          span= gettext('Priority #')
          input(class='form-control input-lg', type='number', tabindex="21", autocomplete="off", name='priority')

      div.row
        input(class='btn btn-primary', type='submit', value=gettext('Create New Pregnancy Record'))
          input(type='hidden', name='_csrf', value=token)
        input(type='hidden', name='_csrf', value=token)

