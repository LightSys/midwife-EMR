extends layouts/default_layout

block roleList
  +titleMsg(title)
  p= gettext('These are the roles in the system.')
    a(class='btn btn-default pull-right', href='/user')= gettext('Back to the List of users')

  p.text-info= gettext('You can change the role descriptions but the role names cannot change.')

  div.roletable
    table(class='table table-striped table-bordered table-hover responsive')
      thead
        tr
          th.header= gettext('Name')
          th.header= gettext('Description')
          th.header= gettext('ID')
      tbody
        each role in roles
          - var roleId = 'roleList-' + role.id;
          tr(class='roleListRow', id=roleId)
            td= role.name
            td= role.description
            td= role.id

