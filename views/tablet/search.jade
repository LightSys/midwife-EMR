extends layouts/default_layout

block search
  +titleMsg(title)

  p= gettext('Search by one or more fields.')

  form(role='form', name='search', action='/search', method='post')
    div.row
      div.form-group
        div(class='col-xs-6')
          span= gettext('First name')
          input(class='form-control', type='text', name='firstname')
          span.help-block= gettext('Use the % sign as a wildcard. E.g. Eliza% or %beth')
        div(class='col-xs-6')
          span= gettext('Last name')
          input(class='form-control', type='text', autofocus, name='lastname')
          span.help-block= gettext('Use the % sign as a wildcard. E.g. Weid% or %maven or Wei%en')
    div.row
      div.form-group
        div(class='col-xs-6')
          span= gettext('Date of birth')
          input(class='form-control', type='date', name='dob')
        div(class='col-xs-6')
          span= gettext('MMC #')
          input(class='form-control', type='number', name='doh')
    div.row
      div.form-group
        div(class='col-xs-6')
          span= gettext('Priority #')
          input(class='form-control', type='number', name='priority', disabled)
        div(class='col-xs-6')
          span= gettext('Phil health ID')
          input(class='form-control', type='number', name='philHealth')

    div.row
      div.col-xs-12 &nbsp;
    div.row
      div(class='form-group')
        div(class='col-xs-12')
          input(class='btn btn-default', type='submit', value=gettext('Search'))
          input(type='hidden', name='searchType', value='new')
          input(type='hidden', name='_csrf', value=token)
