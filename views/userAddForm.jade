extends layouts/default_layout

block search
  +titleMsg(title)

  div.userEditBox
    - var action = '/user';
      form(class='dirty-check', role='form', name='userForm', action=action, method='post')

        div.form-group
          span= gettext('Username')
          input(class='form-control input-lg', type='text', tabindex=1, autocomplete="off", autofocus, name='username')
        div.form-group
          span= gettext('Firstname')
          input(class='form-control input-lg', type='text', tabindex=2, autocomplete="off", name='firstname')
        div.form-group
          span= gettext('Lastname')
          input(class='form-control input-lg', type='text', tabindex=3, autocomplete="off", name='lastname')
        div.form-group
          span= gettext('Password')
          input(class='form-control input-lg', type='password', tabindex=4, name='password')
        div.form-group
          span= gettext('Password confirmation')
          input(class='form-control input-lg', type='password', tabindex=5, name='password2')
        div.form-group
          span= gettext('Email')
          input(class='form-control input-lg', type='text', tabindex=6, autocomplete="off", name='email')
        div.form-group
          span= gettext('Short name or initials')
          input(class='form-control input-lg', type='text', tabindex=7, autocomplete="off", name='shortName')
        div.form-group
          span= gettext('Display name')
          input(class='form-control input-lg', type='text', tabindex=8, autocomplete="off", name='displayName')
        div.form-group
          span= gettext('Comment')
          input(class='form-control input-lg', type='text', tabindex=9, autocomplete="off", name='note')

        input(class='btn btn-default btn-primary', type='submit', value=gettext('Create User'))
        input(type='hidden', name='_csrf', value=token)
        //- Assumes that the user created will be 'active' immediately.
        input(type='hidden', name='status', value='1')

