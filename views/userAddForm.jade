extends layouts/default_layout

block search
  +titleMsg(title)

  div.userEditBox
    - var action = '/user';
      form(role='form', name='userForm', action=action, method='post')

        div.form-group
          span= gettext('Username')
          input(class='form-control input-lg', type='text', autocomplete="off", autofocus, name='username')
        div.form-group
          span= gettext('Firstname')
          input(class='form-control input-lg', type='text', autocomplete="off", name='firstname')
        div.form-group
          span= gettext('Lastname')
          input(class='form-control input-lg', type='text', autocomplete="off", name='lastname')
        div.form-group
          span= gettext('Password')
          input(class='form-control input-lg', type='password', name='password')
        div.form-group
          span= gettext('Password confirmation')
          input(class='form-control input-lg', type='password', name='password2')
        div.form-group
          span= gettext('Email')
          input(class='form-control input-lg', type='text', autocomplete="off", name='email')
        div.form-group
          span= gettext('Comment')
          input(class='form-control input-lg', type='text', autocomplete="off", name='note')

        input(class='btn btn-default btn-primary', type='submit', value=gettext('Create User'))
        input(type='hidden', name='_csrf', value=token)
        //- Assumes that the user created will be 'active' immediately.
        input(type='hidden', name='status', value='1')

